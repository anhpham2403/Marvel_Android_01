<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.framgia.moviedb.data.model.Actor"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        >
        <ImageView
            android:layout_width="@dimen/image_width_100"
            android:layout_height="@dimen/image_height_150"
            app:imageUrl="@{viewModel.avatarUrl}"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.name}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.birthday}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.plaveOfBirth}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.biography}"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_title"
                />
        </LinearLayout>
    </LinearLayout>
</layout>